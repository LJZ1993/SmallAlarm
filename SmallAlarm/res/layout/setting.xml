<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2C9A0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:weightSum="10" >

        <Button
            android:id="@+id/bt_setting_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_weight="4"
            android:background="@drawable/button_ok_selector"
            android:text="取消"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_setting_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/action_settings"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_setting_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_weight="4"
            android:background="@drawable/button_ok_selector"
            android:text="确实"
            android:textColor="@android:color/black" />
    </LinearLayout>

   <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/ll_setting_weather"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询天气的城市名"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_setting_county"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="5dip"
                android:layout_weight="7"
                android:gravity="center"
                android:text="上海"
                 android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="7"
                android:scaleType="fitCenter"
                android:src="@drawable/right_w" />
        </LinearLayout>
    </LinearLayout>

   <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/ll_setting_bell_mode"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bell_mode"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dip"
                android:textSize="12sp"
                android:text="@string/bell_mode_tip"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_setting_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:layout_weight="7"
            android:button="@drawable/check_box"
            android:clickable="false"
            android:focusable="false" />
    </LinearLayout>

   <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/ll_setting_cancel_mode"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel_alarm_mode"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_setting_cancel_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dip"
                android:text="@string/cancel_alarm_tip2"
                 android:textColor="@android:color/black" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:scaleType="fitCenter"
            android:src="@drawable/right_w" />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@android:color/black" />
    <LinearLayout
        android:id="@+id/ll_setting_num_times"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_time"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_setting_num_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dip"
                android:text="@string/num_time_tip"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:scaleType="fitCenter"
            android:src="@drawable/right_w" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting_shake"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shake_title"
               android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_setting_shake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dip"
                android:text="@string/shake_tip"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:scaleType="fitCenter"
            android:src="@drawable/right_w" />
    </LinearLayout>

</LinearLayout>